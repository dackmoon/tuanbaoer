page {
  background-color: #d6f3ff; /* 浅蓝色背景 */
  min-height: 100vh;
}

/* 轮播图样式 */
.swiper-container {
  width: calc(100% - 10rpx); /* 减去左右两边的边距 */
  height: 350rpx;
  position: relative;
  overflow: hidden;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  margin: 0 auto 20rpx; /* 修改为上0 左右auto 下20rpx */
}

.swiper {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}

.image-container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* 覆盖 Vant 默认样式 */
.van-swipe {
  border-radius: 16rpx;
  overflow: hidden;
}

.van-swipe-item {
  overflow: hidden;
  position: relative;
}

.swiper-image {
  width: 100%;
  height: 120%; /* 增加图片高度，使其有足够空间进行位置调整 */
  position: absolute;
  left: 0;
}

/* 调整每张图片的位置 */
.image-position-1 .swiper-image {
  top: 0rpx;
}

.image-position-2 .swiper-image {
  top: -70rpx;
}

.image-position-3 .swiper-image {
  top: 0rpx;
}

.swiper-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  color: #ffffff;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  z-index: 1;
}

/* 导航栏样式 */
.nav-container {
  width: calc(100% - 40rpx);
  margin: 20rpx auto 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 20rpx 10rpx;
}

.nav-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.nav-row:last-child {
  margin-bottom: 0;
}

.nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 0;
}

.nav-icon-wrapper {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e6f7ff, #d6f3ff);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-icon {
  width: 50rpx;
  height: 50rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333333;
  margin-top: 6rpx;
}
